---
import { getCollection } from "astro:content";
import BtnWhatsapp from '@components/ui/BtnWhatsapp.astro'
import {neighborhoods} from "../consts"

const services = (await getCollection('services'))
---
<footer class="py-14 bg-slate-100 border-t border-slate-100 mt-16">
  <div class="max-w-screen-xl mx-auto px-5">
     <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-16">
        <div class="">
           <a href="/" class="text-lg flex items-center">
            <span class="font-bold text-indigo-600">Armadores</span><span class="text-slate-600">Montevideo</span> 
            <span class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-gray-200 text-slate-700 px-2 py-1 rounded-md">PRO</span> 
          </a> 
           <p class="mt-4 mb-8 text-sm text-slate-700 max-w-xs">
              ArmadoresMontevideo es un equipo de armadores expertos.Armamos y cuidados tus muebles.
              <br><br>

              Ciudad Vieja, Montevideo
           </p>
           <BtnWhatsapp/>
        </div>
        <div>
           <h3 class="font-medium text-sm text-slate-800">Empresa</h3>
           <div class="flex flex-col mt-3"> 
            <a href="/servicios" class="py-2 text-sm text-slate-600 hover:text-indigo-600"> Servicios </a>
            <a href="/precios" class="py-2 text-sm text-slate-600 hover:text-indigo-600"> Precios </a>
            <a href="/nosotros" class="py-2 text-sm text-slate-600 hover:text-indigo-600"> Nosotros </a>
            <a href="/blog" class="py-2 text-sm text-slate-600 hover:text-indigo-600"> Blog </a>
            <a href="/contacto" class="py-2 text-sm text-slate-600 hover:text-indigo-600"> Contacto </a> </div>
        </div>
        <div>
           <h3 class="font-medium text-sm text-slate-800">Barrios</h3>
           <div class="mt-3 text-sm text-slate-600 leading-9"> 
             {neighborhoods.map(b=>b.name).join(', ')}
            </div>
        </div>
        <div>
           <h3 class="font-medium text-sm text-slate-800">Servicios</h3>
           <div class="flex flex-col mt-3"> 
            { services.sort((a, b) => a.data.menu.localeCompare(b.data.menu)).map(service => (
              <a href={`/servicio/${service.slug}`} class="py-2 text-sm text-slate-600 hover:text-indigo-600"> {service.data.menu} </a>
            ))}
        </div>
     </div>
  </div>
  <div class="mt-14 pt-8 px-5 border-t border-slate-200">
     <div class="max-w-screen-xl mx-auto px-5">
        <p class="text-center text-sm text-slate-600 [text-wrap:balance]">
           ArmadoresMontevideo
        </p>
        <p class="text-center text-xs text-slate-600 mt-2"> 
          <a href="/privacidad" class="hover:text-indigo-500">Politica de Privacidad</a> 
          <a href="/privacidad" class="hover:text-indigo-500">Condiciones de Uso</a> 
        </p>
     </div>
  </div>
</footer>