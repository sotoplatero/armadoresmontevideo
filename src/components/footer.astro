---
import { getCollection } from "astro:content";
import BtnWhatsapp from '@components/ui/BtnWhatsapp.astro'
import {neighborhoods} from "../consts"

const services = (await getCollection('services'))
---
<footer class="py-14 bg-slate-100 border-t border-slate-100 mt-16">
  <div class="max-w-screen-xl mx-auto px-5">
     <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-16">
        <div class="flex flex-col col-span-2">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1635.9951328746324!2d-56.21224656105294!3d-34.9066937935711!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x959f7f84716a0411%3A0x6d499049aebda667!2sCalle%20Perez%20Castellano%20%26%20Cerrito%2C%2011000%20Montevideo%2C%20Departamento%20de%20Montevideo%2C%20Uruguay!5e0!3m2!1sen!2sca!4v1731026315567!5m2!1sen!2sca" class="w-full h-52" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div>
              <h3 class="font-medium text-sm text-slate-800">Barrios</h3>
              <div class="mt-3 text-xs text-slate-600 leading-5"> 
                 {neighborhoods.map(b=>b.name).join(', ')}
               </div>
            </div>
         </div>
         <div>
            <h3 class="font-medium text-sm text-slate-800">Empresa</h3>
            <div class="flex flex-col mt-3 text-sm text-slate-600 space-y-3"> 
               <a href="/servicios" class="hover:text-indigo-600"> Servicios </a>
               <a href="/precios" class="hover:text-indigo-600"> Precios </a>
               <a href="/nosotros" class="hover:text-indigo-600"> Nosotros </a>
               <a href="/blog" class="hover:text-indigo-600"> Blog </a>
               <a href="/contacto" class="hover:text-indigo-600"> Contacto </a> 
               <a href="/privacidad" class="hover:text-indigo-600">Politica de Privacidad</a> 
               <a href="/privacidad" class="hover:text-indigo-600">Condiciones de Uso</a> 
            </div>
         </div>
        <div>
           <h3 class="font-medium text-sm text-slate-800">Servicios</h3>
           <div class="flex flex-col mt-3 space-y-3"> 
            { services.sort((a, b) => a.data.menu.localeCompare(b.data.menu)).map(service => (
              <a href={`/servicio/${service.slug}`} class="text-sm text-slate-600 hover:text-indigo-600"> {service.data.menu} </a>
            ))}
        </div>
      </div>
   </div>
   <div class="mt-14 pt-8 px-5 border-t border-slate-200 ">
     <!-- <BtnWhatsapp/> -->
     <div class="max-w-screen-xl mx-auto px-5 text-center">
      <a href="/" class="text-lg">
         <span class="font-bold text-indigo-600">Armadores</span><span class="text-slate-600">Montevideo</span> 
         <span class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-gray-200 text-slate-700 px-2 py-1 rounded-md">PRO</span> 
       </a> 
        <p class="my-4 mb-8 text-sm text-slate-700 max-w-xs mx-auto">
           ArmadoresMontevideo es un equipo de armadores expertos.Armamos y cuidados tus muebles.
         </p>
        <p class="text-center text-xs text-slate-600 mt-2"> 
        </p>
     </div>
  </div>
</footer>